<h2>Products</h2>
<div id="products">
<% @products.all.each do |computer| %>
  <div class="product">
    <div class="row">
     <div class="col-lg-12"><img height="200" src="<%= computer.image %>"></div>
    </div>
    <div class="row">
      <div class="col-lg-12"><%= computer.name %></div>  
    </div>
    <div class="row">
      <div class="col-lg-12"><%= computer.description %></div>  
    </div>
    <div class="row">
      <div class="col-lg-4">Brand:</div>  
      <div class="col-lg-8"><%= computer.brand %></div>  
    </div>
    <div class="row">
      <div class="col-lg-4">Model:</div>  
      <div class="col-lg-8"><%= computer.model %></div>  
    </div>
  </div>  
<% end %>
</div>  
